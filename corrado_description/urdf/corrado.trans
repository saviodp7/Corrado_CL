<?xml version="1.0" ?>
<robot name="corrado" xmlns:xacro="http://www.ros.org/wiki/xacro" >

<xacro:arg name="robot_name" default="corrado"/>
<xacro:arg name="hardware_interface" default="PositionJointInterface"/> 

<transmission name="joint_1_tran">
  <robotNamespace>/$(arg robot_name)</robotNamespace>
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="joint_1">
    <hardwareInterface>hardware_interface/$(arg hardware_interface)</hardwareInterface>
  </joint>
  <actuator name="joint_1_actr">
    <hardwareInterface>hardware_interface/$(arg hardware_interface)</hardwareInterface>
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
</transmission>

